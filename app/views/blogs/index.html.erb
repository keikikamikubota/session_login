<h1>ツブヤキ一覧</h1>
<table>
  <tr>
    <th>タイトル</th>
    <th>内容</th>
  </tr>
<% @blogs.each do |blog| %>
  <tr>
    <td><%= blog.title %></td>
    <td><%= blog.content %></td>
    <td><%= link_to '詳細を確認する', blog_path(blog.id) %></td>
    <td><%= link_to "編集する", edit_blog_path(blog.id) %></td>
    <td><%= link_to '削除する', blog_path(blog.id), method: :delete %></td>
  </tr>
<% end %>
</table>
<br>
<%= button_to 'ツブヤく', { controller: 'blogs', action: 'new' }, { method: :get, class: "btn-primary btn-lg"} %>
<%= javascript_pack_tag 'greet', 'data-turbolinks-track': 'reload' %> 